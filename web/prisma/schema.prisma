generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Connection {
  id              String   @id @default(uuid())
  name            String
  players         String[]
  connectionId    String?  @default(uuid())
  firstConnection Boolean  @default(true)
  foundRooms      String[]
  rooms           String[]
}

model GameState {
  id          String    @id @default(uuid())
  gameStarted Boolean   @default(false)
  endTime     DateTime?
}
